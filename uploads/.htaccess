# Prevent directory listing for uploads
Options -Indexes

# Allow access to uploaded files but prevent script execution
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|cgi|scr|exe)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Allow access to image files
<FilesMatch "\.(jpg|jpeg|png|gif|bmp|webp|svg)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Allow access to document files
<FilesMatch "\.(pdf|doc|docx|xls|xlsx|txt)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>