# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME=JahangirAutos
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Database Configuration
DB_HOST=localhost
DB_DATABASE=u473559570_installment_db
DB_USERNAME=u473559570_admin
DB_PASSWORD=your_actual_password

# Hostinger FTP Configuration (for deployment)
HOSTINGER_FTP_SERVER=ftp.yourdomain.com
HOSTINGER_FTP_USERNAME=your_ftp_username
HOSTINGER_FTP_PASSWORD=your_ftp_password

# Site URL for deployment verification
HOSTINGER_SITE_URL=https://yourdomain.com

# Security
SECRET_KEY=your_secret_key_here

# Email Configuration (for notifications)
MAIL_HOST=smtp.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=your_email@yourdomain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls

# File Upload Settings
MAX_FILE_SIZE=5242880  # 5MB
UPLOAD_PATH=./uploads/

# Session Configuration
SESSION_LIFETIME=3600
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# Time Zone
TIMEZONE=Asia/Karachi

# Cache Configuration (for production)
CACHE_DRIVER=file
CACHE_PATH=./cache/

# Log Configuration
LOG_LEVEL=error
LOG_PATH=./logs/

# Development Settings (set to false in production)
ENABLE_DEBUG_MODE=false
ENABLE_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=false